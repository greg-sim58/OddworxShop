<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Oddworx Shop Admin</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/materialize.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />

</head>
<body>
    <div class="container-fluid">
        <nav class="light-blue lighten-1" role="navigation">
            <div class="nav-wrapper container-fluid">
                <a id="logo-container" href="/Home/Index" class="brand-logo">Logo</a>
                <ul class="right hide-on-med-and-down">
                    @if (@User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("User Account Types", "Index", "UserAccount", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("User Accounts", "Index", "UserAccount", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("Shops", "Index", "Shop", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>
                            @*@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
                        </li>
                        <li>@Html.ActionLink("Log out", "LogOut", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    }
                </ul>
                <ul id="nav-mobile" class="sidenav">
                    @if (@User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("User Account Types", "Index", "UserAccount", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("User Accounts", "Index", "UserAccount", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("Shops", "Index", "Shop", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    }
                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                </ul>
                <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            </div>
        </nav>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Oddworx Shop Admin</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <script src="~/Scripts/materialize.min.js"></script>
    <script src="~/Scripts/init.js"></script>
</body>
</html>
